FROM python:3.7-buster

WORKDIR /usr/src/

RUN pip3 install --no-cache-dir numpy
RUN pip3 install --no-cache-dir sympy
RUN pip3 install --no-cache-dir matplotlib
RUN pip3 install --no-cache-dir websockets
RUN pip3 install --no-cache-dir vispy
RUN pip3 install --no-cache-dir progress
RUN pip3 install --no-cache-dir moviepy
RUN pip3 install --no-cache-dir PyQt5
